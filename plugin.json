{
	"id": "nodebb-widget-image-page",
	"name": "NodeBB Essential Widgets",
	"description": "Several basic widgets bundled together in one package including 'HTML', 'Markdown'",
	"url": "https://github.com/psychobunny/nodebb-widget-image-page",
	"library": "./library.js",
	"hooks": [
		{
			"hook": "static:app.load", "method": "init"
		},
		{
			"hook": "filter:widgets.getWidgets", "method": "defineWidgets"
		},
		{
			"hook": "filter:widget.render:recentpostswithimage", "method": "renderRecentPostsWithImageWidget"
		}
	],
	"templates": "./public/templates",
	"css": [
		"public/css/widget.css"
	]
}
